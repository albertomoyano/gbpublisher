' Gambas class file

' EVENTO: AL ABRIR EL FORMULARIO
Public Sub Form_Open()
  ' INICIALIZAR: SOLO SOLAPA 0 VISIBLE

  tsCROSSREF[1].Visible = False
  tsCROSSREF.Index = 0

End

' EVENTO: AL CERRAR EL FORMULARIO
Public Sub btnCerrar_Click()

  Me.Close

End

' EVENTO: BOTÓN PARA VER ARTÍCULOS DEL NÚMERO SELECCIONADO
Public Sub btnArticulos_Click()
  ' MOSTRAR SOLAPA 2 Y CAMBIAR FOCO A ELLA

  tsCROSSREF[1].Visible = True
  tsCROSSREF.Index = 1

  ' ' VALIDAR QUE HAYA UNA FILA SELECCIONADA EN GRIDVIEW DE SOLAPA 0
  ' ' (asumiendo que tu GridView se llama gvRevistas)
  ' If gvRevistas.Row < 0 Then
  '   Message.Warning("Debe seleccionar un número de revista primero")
  '   Return

End

' EVENTO: AL HACER CLICK EN CUALQUIER PESTAÑA DEL TABSTRIP
Public Sub tsCROSSREF_Click()
  ' DETECTAR CAMBIO A SOLAPA 0 (POR REVISTA)

  If tsCROSSREF.Index = 0 Then
    ' OCULTAR SOLAPA 2 AL VOLVER A SOLAPA 0
    tsCROSSREF[1].Visible = False
  Endif

End