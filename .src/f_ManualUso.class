' Gambas class file

Public Sub Form_Open()

  CargarManual()

End

Public Sub CargarManual()

  Dim sIndexPath As String

  ' Construir la ruta al manual
  sIndexPath = User.Home &/ ".gbpublisher/manual/index.html"

  ' Verificar que existe
  If Not Exist(sIndexPath) Then
    Message.Error("No se encuentra el manual de usuario")
    Me.Close
    Return
  Endif

  ' Cargar la p√°gina inicial
  WebViewManualUso.Url = "file://" & sIndexPath

End

Public Sub btnCerrar_Click()

  Me.Close

End
