' Gambas class file

Private hCampos As New Collection

Public Sub ButtonCerrar_Click()

  Me.Close

End

Public Sub Form_Open()

  ' Llenamos el diccionario con la relación NombreVisible → NombreCampo
  hCampos["author"] = "txtAuthor"
  hCampos["book-author"] = "txtBookAuthor"
  hCampos["editor"] = "txtEditor"
  hCampos["foreword"] = "txtEditor"
  hCampos["commentator"] = "txtEditor"
  hCampos["introduction"] = "txtEditor"
  hCampos["translator"] = "txtEditor"
  hCampos["annotator"] = "txtEditor"
  hCampos["institution"] = "txtEditor"
  hCampos["organization"] = "txtEditor"
  hCampos["publisher"] = "txtEditor"
  hCampos["orig-publisher"] = "txtEditor"
  hCampos["location"] = "txtEditor"
  hCampos["orig-location"] = "txtEditor"

  ' Llenamos el ComboBox con los nombres visibles
  ComboBoxBibTeX.Clear
  For Each k As String In hCampos.Keys
    ComboBoxBibTeX.Add(k)
  Next

End
