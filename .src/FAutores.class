' Gambas class file

Private rAutores As Result
Public EsFormularioOriginal As Boolean = True  ' Es p√∫blica para que se pueda modificar desde FMain

Public Sub Form_Open()

  Dim sSQL As String

  If EsFormularioOriginal Then
    HBoxAutores2.Visible = False
  Else
    HBoxAutores1.Visible = False
  Endif

  sSQL = "SELECT nombre FROM credit_roles ORDER BY nombre;"
  rAutores = m_ConexionBD.mConn.Exec(sSQL)

  While rAutores.Available
    ComboBoxRoles.Add(rAutores!nombre)
    rAutores.MoveNext
  Wend

End

Public Sub ButtonAgregarAlListado_Click()

  Me.Close

End

Public Sub ButtonCerrarAutores_Click()

  Me.Close

End

Public Sub ButtonVerDetallesCRediT_Click()

  f_TXTextendido.OriginalTextBox = txtDetallesCReiT
  f_TXTextendido.ShowModal

End
