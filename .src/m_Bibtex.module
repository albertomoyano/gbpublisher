  FMain.BtnNuevoBib.Visible = True
  FMain.btnGuardarBib.Visible = False
  FMain.btnGuardarCambiosBib.Visible = False
  FMain.BtnEliminarBib.Visible = False
  FMain.btnGuardarIGUAL.Visible = False

End

Public Sub IniciarBibtex()

