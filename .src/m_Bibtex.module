Public Sub BuscarPorCampo(campo As TextBox, grid As GridView, campoBD As String)

  Dim sValor As String = Trim(campo.Text)
  Dim sConsulta As String
  Dim resultado As Result

  If sValor = "" Then
    m_Sonido.sonar("Warning")
    Message.Warning("Debe introducir contenido a buscar.")
    campo.SetFocus
    Return
  Endif

  ' ESCAPAR COMILLAS SIMPLES PARA EVITAR ERRORES SQL
  sValor = Replace(sValor, "'", "''")

  ' CONSTRUIR LA CONSULTA
  sConsulta = "SELECT * FROM bibtex WHERE " & campoBD & " LIKE '%" & sValor & "%' AND id_proyecto = " & FMain.id_proyecto.Text & ";"

  ' EJECUTAR CONSULTA EN VARIABLE LOCAL
  resultado = m_ConexionBD.mConn.Exec(sConsulta)

  ' VERIFICAR SI HAY RESULTADOS
  If resultado.Count = 0 Then
    m_Sonido.sonar("Info")
    Message.Info("No se ha encontrado ningún resultado.")
    Return  ' <-- SALE SIN TOCAR EL GRID
  Endif

  ' SOLO SI HAY RESULTADOS, CARGAR EN EL GRID
  CargarDatosResultados(grid, resultado)

End

Public Sub CargarDatosResultados(Grid As GridView, resultado As Result)

  Dim i As Integer
  Dim j As Integer

  ' LIMPIAR EL GRID ANTES DE MOSTRAR LOS RESULTADOS
  Grid.Clear()
  Grid.Rows.Count = resultado.Count

  ' LLENAR EL GRID CON LOS RESULTADOS
  For i = 0 To resultado.Count - 1
    For j = 0 To resultado.Fields.Count - 1
      If IsNull(resultado[j]) Then
        Grid[i, j].Text = ""
      Else
        Grid[i, j].Text = resultado[j]
      Endif
    Next
    resultado.MoveNext
  Next

End
