Public Sub ExportarBibTeX() As Boolean

  Dim s As String
  Dim f As ResultField
  Dim aFields As New String[]
  Dim i As Integer
  Dim w As Integer
  Dim tab As String
  Dim sResultado As Result
  Dim filtrarBib As String
  Dim outputFile As String

  filtrarBib = "select * from bibtex where id_proyecto = " & FMain.id_proyecto.Text
  sResultado = m_ConexionBD.mConn.Exec(filtrarBib)
  aFields.Clear
  For Each f In sResultado.Fields
    aFields.Add(f.Name)
    If Len(f.Name) > w Then
      w = Len(f.Name)
    Endif
  Next
  ' INICIALIZA LA CADENA VACÍA
  s = ""
  While sResultado.Available
    s &= "\n@" & sResultado["tipo_de_entrada"] & "{" & sResultado[aFields[4]] & ",\n"
    For i = 5 To aFields.Max
      If Not IsNull(sResultado[aFields[i]]) And Len(sResultado[aFields[i]]) > 0 Then
        tab = String(w - Len(aFields[i]), " ")
        s &= "  " & aFields[i] & tab & " = {" & sResultado[aFields[i]] & "},\n"
      Endif
    Next
    s &= "}\n"
    sResultado.MoveNext
  Wend

  ' REEMPLAZOS DE LAS CLAVES
  s = Replace(s, "how_published", "howpublished")
  s = Replace(s, "index_title", "indextitle")
  s = Replace(s, "short_hand", "shorthand")
  s = Replace(s, "url_date", "urldate")
  s = Replace(s, "book_title_addon", "booktitleaddon")
  s = Replace(s, "journal_title_addon", "journaltitleaddon")
  s = Replace(s, "main_title_addon", "maintitleaddon")
  s = Replace(s, "main_title", "maintitle")
