# Gambas Form File 3.0

{ Form Form
  MoveScaled(0,0,39,38)
  Sticky = True
  SkipTaskbar = True
  Arrangement = Arrange.Vertical
  Spacing = True
  Margin = True
  Padding = 4
  { HBox2 HBox
    MoveScaled(0,0,33,4)
    AutoResize = True
    { !tlfecha TextLabel
      MoveScaled(20,0,11,4)
      #Public = True
      Expand = True
      Alignment = Align.Normal
    }
  }
  { HBox1 HBox
    MoveScaled(1,5,37,4)
    Invert = True
    { !btnLeido Button
      MoveScaled(32,0,4,4)
      #Public = True
      ToolTip = ("Marcar como leído")
    }
    { btnOcultar Button
      MoveScaled(27,0,4,4)
      ToolTip = ("Ocultar la nota")
      Picture = Picture["iconos/esconder.png"]
    }
    { !btnDelete Button
      MoveScaled(23,0,4,4)
      #Public = True
      ToolTip = ("Eliminar la nota ")
      Picture = Picture["iconos/borrar.png"]
    }
    { !btnResponder Button
      MoveScaled(19,0,4,4)
      #Public = True
      ToolTip = ("Responder al remitente")
    }
    { !btnEditar Button
      MoveScaled(14,0,4,4)
      #Public = True
      Visible = False
      ToolTip = ("Guardar los cambios en el Texto. Sólo para auto-notas.")
    }
    { !Spring1 Spring
      MoveScaled(2,0,10,4)
      #Public = True
    }
  }
  { !texto TextArea
    MoveScaled(1,10,32,27)
    #Public = True
    Background = Color.Transparent
    Expand = True
    ReadOnly = True
    Wrap = True
  }
}
