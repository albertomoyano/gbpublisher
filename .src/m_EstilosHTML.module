' Gambas module file

' m_EstilosHTML.module

' ============================================
' MÓDULO: m_EstilosHTML
' DESCRIPCIÓN: Provee estilos CSS estandarizados para todos los HtmlView de la aplicación
' AUTOR: Alberto Moyano
' FECHA: 2026
' ============================================

' ============================================
' FUNCIÓN PÚBLICA: ObtenerEstilosCSS
' DESCRIPCIÓN: Retorna el bloque de estilos CSS completo para usar en HtmlView
' PARÁMETROS: Ninguno
' RETORNA: String con el tag <style> completo incluyendo todos los estilos CSS
' USO: Concatenar con el contenido HTML antes de asignarlo a HtmlView.Html
' ESTILOS INCLUIDOS:
'   - H3, H4: Azul petróleo (#16697A)
'   - P: Negro (#000000), marginado izquierda 10px, padding 4px
'   - PRE: Bloque de código azul oscuro (#004080)
'   - CODE: Código inline verde (#008040)
'   - Tablas, listas, enlaces
' ============================================
Public Function ObtenerEstilosCSS() As String

  Dim estiloHTML As String

  ' CONSTRUIR ESTILOS CSS COMPLETOS
  estiloHTML = "<style>" & gb.NewLine

  ' ESTILOS GENERALES DE BODY Y HTML
  estiloHTML &= "html, body {" & gb.NewLine
  estiloHTML &= "  margin: 0;" & gb.NewLine
  estiloHTML &= "  padding: 4px;" & gb.NewLine
  estiloHTML &= "  overflow-x: hidden;" & gb.NewLine
  estiloHTML &= "  box-sizing: border-box;" & gb.NewLine
  estiloHTML &= "  max-width: 99%;" & gb.NewLine
  estiloHTML &= "  font-family: sans-serif;" & gb.NewLine
  estiloHTML &= "  background-color: #FFFFFF;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA H3 - AZUL PETRÓLEO
  estiloHTML &= "h3 {" & gb.NewLine
  estiloHTML &= "  color: #16697A;" & gb.NewLine
  estiloHTML &= "  font-size: 18px;" & gb.NewLine
  estiloHTML &= "  font-weight: bold;" & gb.NewLine
  estiloHTML &= "  margin: 8px 0 4px 0;" & gb.NewLine
  estiloHTML &= "  padding: 4px 0;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA H4 - AZUL PETRÓLEO
  estiloHTML &= "h4 {" & gb.NewLine
  estiloHTML &= "  color: #16697A;" & gb.NewLine
  estiloHTML &= "  font-size: 16px;" & gb.NewLine
  estiloHTML &= "  font-weight: bold;" & gb.NewLine
  estiloHTML &= "  margin: 6px 0 4px 0;" & gb.NewLine
  estiloHTML &= "  padding: 4px 0;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA PÁRRAFOS - NEGRO, MARGINADO IZQUIERDA
  estiloHTML &= "p {" & gb.NewLine
  estiloHTML &= "  color: #000000;" & gb.NewLine
  estiloHTML &= "  font-size: 16px;" & gb.NewLine
  estiloHTML &= "  margin-left: 10px;" & gb.NewLine
  estiloHTML &= "  margin-top: 4px;" & gb.NewLine
  estiloHTML &= "  margin-bottom: 4px;" & gb.NewLine
  estiloHTML &= "  padding: 4px 0;" & gb.NewLine
  estiloHTML &= "  line-height: 1.4;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA LISTAS
  estiloHTML &= "ul, ol {" & gb.NewLine
  estiloHTML &= "  margin-left: 20px;" & gb.NewLine
  estiloHTML &= "  color: #000000;" & gb.NewLine
  estiloHTML &= "  padding: 4px 0;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  estiloHTML &= "li {" & gb.NewLine
  estiloHTML &= "  margin-bottom: 4px;" & gb.NewLine
  estiloHTML &= "  padding: 2px 0;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA PRE - BLOQUE DE CÓDIGO (DISPLAY BLOCK, NO INLINE)
  estiloHTML &= "pre {" & gb.NewLine
  estiloHTML &= "  color: #004080;" & gb.NewLine
  estiloHTML &= "  font-weight: bold;" & gb.NewLine
  estiloHTML &= "  display: block;" & gb.NewLine
  estiloHTML &= "  font-family: monospace;" & gb.NewLine
  estiloHTML &= "  background-color: #F0F0F0;" & gb.NewLine
  estiloHTML &= "  padding: 8px;" & gb.NewLine
  estiloHTML &= "  margin: 8px 0;" & gb.NewLine
  estiloHTML &= "  border-radius: 3px;" & gb.NewLine
  estiloHTML &= "  border-left: 3px solid #16697A;" & gb.NewLine
  estiloHTML &= "  overflow-x: auto;" & gb.NewLine
  estiloHTML &= "  white-space: pre-wrap;" & gb.NewLine
  estiloHTML &= "  word-wrap: break-word;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA CODE - CÓDIGO INLINE (DISPLAY INLINE)
  estiloHTML &= "code {" & gb.NewLine
  estiloHTML &= "  color: #008040;" & gb.NewLine
  estiloHTML &= "  font-weight: bold;" & gb.NewLine
  estiloHTML &= "  display: inline;" & gb.NewLine
  estiloHTML &= "  font-family: monospace;" & gb.NewLine
  estiloHTML &= "  background-color: #F0F0F0;" & gb.NewLine
  estiloHTML &= "  padding: 2px 4px;" & gb.NewLine
  estiloHTML &= "  border-radius: 3px;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA TEXTO EN NEGRITA
  estiloHTML &= "strong, b {" & gb.NewLine
  estiloHTML &= "  font-weight: bold;" & gb.NewLine
  estiloHTML &= "  color: #000000;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA TEXTO EN CURSIVA
  estiloHTML &= "em, i {" & gb.NewLine
  estiloHTML &= "  font-style: italic;" & gb.NewLine
  estiloHTML &= "  color: #000000;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA IMÁGENES Y TABLAS - RESPONSIVE
  estiloHTML &= "img, table {" & gb.NewLine
  estiloHTML &= "  max-width: 99%;" & gb.NewLine
  estiloHTML &= "  height: auto;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA TABLAS
  estiloHTML &= "table {" & gb.NewLine
  estiloHTML &= "  border-collapse: collapse;" & gb.NewLine
  estiloHTML &= "  margin: 8px 0;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  estiloHTML &= "th, td {" & gb.NewLine
  estiloHTML &= "  border: 1px solid #CCCCCC;" & gb.NewLine
  estiloHTML &= "  padding: 6px;" & gb.NewLine
  estiloHTML &= "  text-align: left;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  estiloHTML &= "th {" & gb.NewLine
  estiloHTML &= "  background-color: #16697A;" & gb.NewLine
  estiloHTML &= "  color: #FFFFFF;" & gb.NewLine
  estiloHTML &= "  font-weight: bold;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' ESTILOS PARA ENLACES
  estiloHTML &= "a {" & gb.NewLine
  estiloHTML &= "  color: #16697A;" & gb.NewLine
  estiloHTML &= "  text-decoration: underline;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  estiloHTML &= "a:hover {" & gb.NewLine
  estiloHTML &= "  color: #0D4A56;" & gb.NewLine
  estiloHTML &= "}" & gb.NewLine

  ' CERRAR TAG STYLE
  estiloHTML &= "</style>" & gb.NewLine

  Return estiloHTML

End