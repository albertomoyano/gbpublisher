Private Function URLEncode(sTexto As String) As String

  Dim sResultado As String = ""
  Dim i As Integer
  Dim c As String
  Dim code As Integer

  For i = 1 To Len(sTexto)
    c = Mid(sTexto, i, 1)
    code = Asc(c)

    Select Case c
      Case "A" To "Z", "a" To "z", "0" To "9", "-", "_", ".", "~"
        sResultado &= c
      Case " "
        sResultado &= "+"  ' o usar %20 si querés más precisión
      Case Else
        sResultado &= "%" & Hex(code, 2)
    End Select
  Next

  Return sResultado

End Function

