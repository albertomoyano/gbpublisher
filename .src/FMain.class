Public Sub Form_Open()

  Dim versionRemota As String
  Dim name As String

  ' Comprobación de versión
  versionRemota = m_FuncionesGenericas.GitVersion("https://raw.githubusercontent.com/albertomoyano/gbpublisher/refs/heads/main/.project")
  If versionRemota <> "" And versionRemota <> Application.Version Then
    Message.Info("La versión instalada que estás ejecutando (" & Application.Version & ") difiere de la disponible en el repositorio (" & versionRemota & ")")
  Endif

  ' Verificación de instancias múltiples
  Exec ["pgrep", "-fl", Application.Name] Wait To name
  If Split(Trim$(name), gb.NewLine, "", True).Count > 1 Then
    Message.Warning(Application.Name & " ya se está ejecutando en este equipo.")
    Quit
  Endif

  FMain.Title = Application.Title & " v. " & Application.Version

  $Bash = TerminalViewProyecto.Shell("/usr/bin/bash")
  'creamos el directorio oculto del programa y revisamos la BBDD
  m_InicioCierre.DirectorioOcultoApp()
  Dim sDbPath As String
  Dim sDbFile As String
  Dim sArchivo As String

  ' Obtener la ruta de la base de datos desde Settings
  sDbPath = Settings["Database/Path", User.Home & "/.gbadoc"]
  sDbFile = sDbPath &/ "gbadoc.sqlite"

  ' Verificar si la base de datos existe
  If Exist(sDbFile) Then
    ' La base de datos existe, usar la ruta existente
    sArchivo = sDbFile
    ' Message.Info("Base de datos encontrada en: " & sDbFile)
  Else
    ' Si no existe la base de datos, pedir al usuario que seleccione una
    Message.Info("No se encontró la base de datos en: " & sDbFile & "\nSeleccione un archivo existente.")
    Dialog.Title = "Seleccione la base de datos gbadoc.sqlite"
    Dialog.Filter = ["gbadoc.sqlite", "SQLite Databases"]

    If Dialog.OpenFile() Then
      sArchivo = Dialog.Path
      ' Verificar que la ruta sea válida
      If IsNull(sArchivo) Or Trim(sArchivo) = "" Then
        ' Message.Warning("No se seleccionó un archivo válido.\nLa aplicación se cerrará.")
        Quit
      End If
      ' Guardar la nueva ruta en Settings
      sDbPath = File.Dir(sArchivo)
      Settings["Database/Path"] = sDbPath
      Settings.Save()
    Else
      ' Usuario canceló
      Message.Warning("Debe seleccionar un archivo de base de datos para continuar.\nLa aplicación se cerrará.")
      Quit
    End If
  End If

  sDbFile = sArchivo

  ' Hacemos una copia de la bbdd antes de abrirla
  Dim fecha As String
  Dim sArchivoDestino As String
  Dim sFiles As String[]
  Dim sFile As String
  Dim sFechaArchivo As String
  Dim dFechaArchivo As Date
  Dim iDiasAntiguo As Integer

  fecha = Format(Now(), "dd-mm-yyyy") ' Obtener la fecha actual
  sArchivoDestino = respaldoBBDD &/ fecha & "-gbadoc.sqlite"

  ' Verificar que el directorio de respaldo existe
  If Not Exist(respaldoBBDD) Then
    Try Mkdir respaldoBBDD
    If Error Then
      Message.Warning("No se pudo crear el directorio de respaldo: " & respaldoBBDD)
      Return ' Salir de la función si no se puede crear
    End If
  End If

  ' Verificar que el archivo origen existe
  If Not Exist(sDbFile) Then
    Message.Warning("El archivo de base de datos no existe: " & sDbFile)
    Return
  End If

  ' Crear el respaldo del día actual (solo si no existe ya)
  If Not Exist(sArchivoDestino) Then
    Try Copy sDbFile To sArchivoDestino
    If Error Then
      Message.Warning("Error al crear respaldo: " & Error.Text)
    End If
  End If

  ' Limpiar respaldos antiguos (mantener solo 10 días)
  Try sFiles = Dir(respaldoBBDD, "*-gbadoc.sqlite")
  If Not Error Then
    For Each sFile In sFiles
      ' Extraer la fecha del nombre del archivo
      If sFile Like "??-??-????-gbadoc.sqlite" Then
        sFechaArchivo = Left(sFile, 10) ' Extraer "dd-mm-yyyy"
        Try dFechaArchivo = Date(Val(Right(sFechaArchivo, 4)), Val(Mid(sFechaArchivo, 4, 2)), Val(Left(sFechaArchivo, 2)))
        If Not Error Then
          ' Calcular días de diferencia
          iDiasAntiguo = DateDiff(dFechaArchivo, Date(Now()), gb.Day)
          ' Si tiene más de 10 días, eliminarlo
          If iDiasAntiguo > 10 Then
            Try Kill respaldoBBDD &/ sFile
            ' Si quieres ver qué archivos se eliminan, descomenta la siguiente línea:
            ' Print "Eliminado respaldo antiguo: " & sFile
          End If
        End If
      End If
    Next
  End If

  ' abrimos la conexión a la red
  m_OnOff_y_Red.OnRed

  TimerHOY.Delay = 1000
  TimerHOY.Stop' detenemos el reloj
  TextHoraParcial.Text = "00:00:00"

  TextAreaProyecto.Visible = True
  HBoxGuardarTextArea.Visible = False
  PictureBoxProyecto.Visible = False
  HBoxTEI1.Visible = False
  HBoxTEI2.Visible = False
  HBoxTEI3.Visible = False
  HBoxSigla1.Visible = False
  HBoxSigla2.Visible = False
  HBoxSigla3.Visible = False

  PictureBoxProyecto.Picture = Null

  ' diseñamos los gridview
  m_Bibtex.ConfigurarTableViewBibtexEnCurso(gvReferenciasEnCurso)
  m_Bibtex.RellenarEditorTypes([FMain.cmbEditorType, FMain.cmbEditorTypeA, FMain.cmbEditorTypeB, FMain.cmbEditorTypeC])
  m_Bibtex.RellenarIdiomas([FMain.cmbHyphenation, FMain.cmbLanguage, FMain.cmbOrigLanguage, FMain.cmbLangId])
  m_Glosarios.ConfigurarTableViewGlosarioEnCurso(gvSiglasEnCurso)
  m_Articulos.ConfigurarTableViewArticulos(gbMetadatosArticulos)
  m_Autores.ConfigurarTableViewAutores(gbMetadatosAutores)

End

